        						<LineBreak/><LineBreak/>

        						<Run Text=" 你出现在我诗的每一页"/>
        						<LineBreak/><LineBreak/>

        						<Run Text=" 雨下整夜 我的爱溢出就像雨水"/>
        						<LineBreak/><LineBreak/>

        						<Run Text=" 院子落叶 跟我的思念厚厚一叠"/>
        						<LineBreak/><LineBreak/>

        						<Run Text=" 我接着写 把永远爱你写进诗的结尾"/>
        						<LineBreak/><LineBreak/>

        						<Run Text=" 你是我唯一想要的了解"/>
        						<LineBreak/><LineBreak/>

